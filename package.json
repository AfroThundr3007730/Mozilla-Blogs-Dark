{
  "name": "mozilla-blogs-dark",
  "title": "Mozilla Blogs Dark",
  "version": "1.0.9",
  "description": "Dark theme for the Mozilla Blogs",
  "license": "GPL-3.0",
  "repository": "https://github.com/AfroThundr3007730/Mozilla-Blogs-Dark",
  "homepage": "https://github.com/AfroThundr3007730/Mozilla-Blogs-Dark",
  "main": "mozilla-blogs-dark.user.css",
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-silverwind": "^4.1.1",
    "perfectionist": "^2.4.0",
    "stylelint": "^11.0.0",
    "stylelint-config-standard": "^19.0.0",
    "updates": "^9.0.0",
    "ver": "^5.1.4"
  },
  "scripts": {
    "authors": "bash tools/authors",
    "clean": "npm run perfectionist && node tools/fix-perfectionist.js",
    "eslint": "eslint --quiet --color tools/*.js",
    "patch": "npx ver -p patch mozilla-blogs-dark.user.css",
    "minor": "npx ver -p minor mozilla-blogs-dark.user.css",
    "major": "npx ver -p major mozilla-blogs-dark.user.css",
    "perfectionist": "npx perfectionist mozilla-blogs-dark.user.css mozilla-blogs-dark.user.css --indentSize 2 --maxAtRuleLength 250",
    "stylelint": "npx stylelint --color -- mozilla-blogs-dark.user.css",
    "test": "npm run eslint && npm run stylelint",
    "update": "npx updates -cu && rm -rf node_modules && npm install"
  }
}
